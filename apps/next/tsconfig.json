{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"~/*": ["./src/*"],
			"@repo/api/*": ["../../packages/api/src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"postcss.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}

{
	"name": "@repo/api",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"author": {
		"name": "Carlos Ricardo De Oliveira Ziegler",
		"url": "https://github.com/CarlosZiegler"
	},
	"repository": {
		"type": "git"
	},
	"scripts": {
		"lint": "bunx @biomejs/biome format ./src --write",
		"dev": "bun run src/server.ts",
		"build": "bun run ./build.ts",
		"start": "bun run ./dist/index.js",
		"db:generate": "bunx drizzle-kit generate",
		"db:migrate": "bun run src/libs/database/migrate.ts",
		"db:drop": "bunx drizzle-kit drop",
		"db:pull": "bunx drizzle-kit introspect",
		"db:studio": "bunx drizzle-kit studio",
		"db:check": "bunx drizzle-kit check",
		"test": "bunx vitest run",
		"test:watch": "bunx vitest --watch",
		"test:coverage": "bunx vitest run --coverage",
		"test:ui": "bunx vitest --ui"
	},
	"dependencies": {
		"@hono/node-server": "^1.13.8",
		"@hono/sentry": "^1.2.0",
		"@hono/swagger-ui": "^0.2.2",
		"@hono/zod-openapi": "^0.18.3",
		"@hono/zod-validator": "^0.2.2",
		"@supabase/supabase-js": "^2.48.1",
		"@types/bun": "^1.2.2",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.30.10",
		"hono": "^4.6.20",
		"hono-openapi": "^0.4.4",
		"pg": "^8.13.1",
		"postgres": "^3.4.5",
		"zod": "^3.24.1",
		"zod-openapi": "^4.2.3",
		"zod-validation-error": "^3.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@types/node": "^20.17.17",
		"@vitest/ui": "^1.6.1",
		"drizzle-kit": "^0.21.4",
		"esbuild": "^0.21.5",
		"npm-run-all": "^4.1.5",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.6.1"
	}
}
